{{#>profile-edit}}
<h2>Edit your profile</h2>
<form method="POST" autocomplete="off">
    <div class="flex flex-column">
        <label for="edit-first">First name</label>
        <input class="bg-goldenrod text-carmine" type="text" name="edit-first" id="edit-first">
        <label for="edit-last">Last name</label>
        <input class="bg-goldenrod text-carmine" type="text" name="edit-last" id="edit-last">
        <label for="edit-email">Email</label>
        <input class="bg-goldenrod text-carmine" type="password" name="edit-email" id="edit-email">
        <label for="edit-password">Password</label>
        <input class="bg-goldenrod text-carmine" type="password" name="edit-password" id="edit-password">
        <label for="edit-age">Age</label>
        <input class="bg-goldenrod text-carmine" type="text" name="edit-age" id="edit-age">
        <label for="edit-city">City</label>
        <input class="bg-goldenrod text-carmine" type="text" name="edit-city" id="edit-city">
        <label for="edit-user-url">Website</label>
        <input class="bg-goldenrod text-carmine" type="text" name="edit-user-url" id="edit-user-url">
        <div class="flex flex-column align-center">
            <button class="bg-carmine text-goldenrod" type="submit" style="width: 50%; margin-top: 20px">Submit</button> 
        </div>
    </div>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
</form>
{{/profile-edit}}