<div class="main-petition-container">
    <div class="petition-container"> 
        <h1># sex-disaggregate your data</h1> 
        <h3>Sign my petition to oblige medical trials to disaggregate their data by sex</h3>
        <form method="POST">
            <div class="form-container">
                {{#if error}}
                    <p><em>Something went wrong. Please, try again.</em></p>
                {{/if}}
                <div class="inputs">
                    <div class="input-container">
                        <label for="first-name">First name</label>
                        <input type="text" name="first-name" id="first-name" required>
                    </div>
                    <div class="input-container">
                        <label for="last-name">Last name</label>
                        <input type="text" name="last-name" id="last-name" required>
                    </div>
                </div>
                <input type="hidden" name="signature" id="signature" required>
                <div class="canvas-container">
                    <canvas height="50px" width="400px"></canvas>
                </div>
                <button type="submit">Submit</button>
                </div>
        </form>
    </div>  
</div>
